{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "utils/*": ["src/utils/*"],
      "store/*": ["src/store/*"],
      "scss/*": ["src/scss/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}